<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="288.0" prefWidth="327.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditSubjectDialogController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="nameTextBox" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Label text="Type" HBox.hgrow="NEVER" />
            <ComboBox fx:id="typeComboBox" promptText="Choose Type" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <TableView editable="true" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn prefWidth="75.0" text="Day" />
          <TableColumn prefWidth="75.0" text="Start" />
            <TableColumn prefWidth="75.0" text="End" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#deleteTermButtonClicked" text="-" />
            <Button mnemonicParsing="false" onAction="#addTermButtonClicked" text="+" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#applyButtonClicked" text="Apply" />
            <Button mnemonicParsing="false" onAction="#cancelButtonClicked" text="Cancel" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
